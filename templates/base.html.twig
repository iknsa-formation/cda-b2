<!DOCTYPE html>
<html>
    <head>
        <meta charset="UTF-8">
        <title>{% block title %}Welcome!{% endblock %}</title>
        <link rel="icon" href="data:image/svg+xml,<svg xmlns=%22http://www.w3.org/2000/svg%22 viewBox=%220 0 128 128%22><text y=%221.2em%22 font-size=%2296%22>⚫️</text></svg>">
        {# Run `composer require symfony/webpack-encore-bundle` to start using Symfony UX #}
        {% block stylesheets %}
            {{ encore_entry_link_tags('app') }}
        {% endblock %}

        {% block javascripts %}
            {{ encore_entry_script_tags('app') }}
        {% endblock %}
    </head>
    <body>
        <header>
            <div class="container">
                <div class="d-flex">
                    <nav>
                        <a href="{{ path('app_homepage') }}">Accueil</a>
                        <a href="{{ path('app_book_index') }}">Nos Livres</a>
                        <a href="{{ path('app_author_index') }}">Les auteurs</a>
                        <a href="{{ path('app_category_index') }}">Les catégories</a>
                    </nav>

                    {# User Nav #}
                    <nav class="ms-auto">
                        {% if app.user %}
                        <a href="{{ path('app_profile') }}">Mon profil</a>
                        <a href="{{ path('app_logout') }}">Deconnexion</a>
                        {% else %}
                        <a href="{{ path('app_register') }}">Inscription</a>
                        <a href="{{ path('app_login') }}">Connexion</a>
                        {% endif %}
                    </nav>
                </div>

            </div>
        </header>

        {# Flash Messages #}
        {% for key, messages in app.flashes() %}
            {% for message in messages %}
                <div class="alert alert-{{ key }}">{{ message }}</div>
            {% endfor %}
        {% endfor %}

        {% block body %}{% endblock %}


        <footer>

            {{ dump(available_locales) }}
            <ul>
                <li>Français</li>
                <li>English</li>
                <li>Italiano</li>
            </ul>

        </footer>
    </body>
</html>
